<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <!-- Project -->
        <TargetFrameworks>netstandard2.0;net6.0</TargetFrameworks>
        <LangVersion>preview</LangVersion>
        <Nullable>enable</Nullable>

        <!-- Package -->
        <Authors>GeekyEggo</Authors>
        <IncludeSymbols>true</IncludeSymbols>
        <IsPackable>true</IsPackable>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <PackageOutputPath>..\..\dist</PackageOutputPath>
        <!-- TODO: <PackageProjectUrl>https://github.com/GeekyEggo/StreamDeck-dotnet</PackageProjectUrl>-->
        <!-- TODO: <PackageReadmeFile>README.md</PackageReadmeFile>-->
        <PackageTags>Elgato,Stream-Deck,Plugin,Streaming,SDK</PackageTags>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <!-- TODO: <RepositoryUrl>https://github.com/GeekyEggo/StreamDeck-dotnet</RepositoryUrl>-->
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.1" />
        <PackageReference Include="System.Text.Json" Version="6.0.5" />
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

</Project>
